# App Configuration
NODE_ENV=development
LOG_LEVEL=info

# Data Storage
DATA_DIR=./data
STORAGE_FORMAT=json # Options: json, csv

# Analysis Configuration
UPDATE_INTERVAL=30000 # milliseconds (30s to respect CoinGecko's rate limits)
COINS_TO_TRACK=bitcoin,ethereum
CURRENCIES=usd,eur

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=50 # CoinGecko free tier limit
RATE_LIMIT_BUFFER=5 # Buffer to prevent hitting limits

# Telegram Bot Configuration for General crypto
TELEGRAM_BOT_TOKEN_GENERAL=your_bot_token_here
TELEGRAM_CHAT_ID_GENERAL=your_chat_id_here

# Telegram Bot Configuration for Wallet analysis
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here


# Helius API Configuration
HELIUS_API_KEY=your_helius_api_key_here

DATABASE_URL=file:./dev.db

# JWT Authentication Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRES_IN=7d

# Cookie Configuration (optional - for cookie-based auth)
AUTH_COOKIE_MODE=false
AUTH_COOKIE_NAME=analyzer.sid
AUTH_COOKIE_SECURE=true

# Frontend/Backend URLs (for CORS and cookies)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Demo Wallets (comma-separated list of wallet addresses for demo access)
DEMO_WALLETS=wallet1,wallet2,wallet3