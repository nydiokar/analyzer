# App Configuration
NODE_ENV=development
LOG_LEVEL=info

# Data Storage
DATA_DIR=./data
STORAGE_FORMAT=json # Options: json, csv

# Analysis Configuration
UPDATE_INTERVAL=30000 # milliseconds (30s to respect CoinGecko's rate limits)
COINS_TO_TRACK=bitcoin,ethereum,binancecoin
CURRENCIES=usd,eur

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=50 # CoinGecko free tier limit
RATE_LIMIT_BUFFER=5 # Buffer to prevent hitting limits
